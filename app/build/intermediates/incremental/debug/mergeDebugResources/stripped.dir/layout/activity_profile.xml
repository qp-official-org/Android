<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/profile_qp_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/app_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"/>
        <Button
            android:id="@+id/main_search_bt"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="        질문하기 전 검색하기"
            android:textSize="12dp"
            android:paddingTop="2dp"
            android:background="@drawable/bar_search"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/bt_search"
            android:layout_marginStart="-5dp"
            app:layout_constraintStart_toStartOf="@id/main_search_bt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_main_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_top_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="370dp"
            android:layout_height="130dp"
            android:src="@drawable/box_orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/profile_main_image_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/profile_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="큐피"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/profile_main_image_iv"
            app:layout_constraintTop_toTopOf="@id/profile_main_image_iv"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024년 01월 01일 가입"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/profile_main_image_iv"
            app:layout_constraintBottom_toBottomOf="@id/profile_main_image_iv"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/profile_main_coin_image_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/coin"
            app:layout_constraintStart_toEndOf="@id/profile_main_image_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/profile_main_coin_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="800"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/profile_main_coin_image_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/profile_main_coin_point_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="point"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/profile_main_coin_num_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="20dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@id/profile_main_coin_point_tv"
            app:layout_constraintBottom_toBottomOf="@id/profile_main_coin_point_tv"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/profile_main_coin_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/profile_main_coin_point_tv"
            app:layout_constraintBottom_toBottomOf="@id/profile_main_coin_point_tv"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개의 답변을 볼 수 있어요!"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/profile_main_coin_text_tv"
            app:layout_constraintBottom_toBottomOf="@id/profile_main_coin_text_tv"
            android:layout_marginStart="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_main_edit_btn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/box_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="프로필 수정"
            android:textColor="@color/black"
            android:textSize="10sp"/>


<!--        프로필 수정 버튼 누를 시 등장-->
        <ImageView
            android:id="@+id/profile_edit_setting_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_settings_24"
            app:layout_constraintEnd_toEndOf="@id/profile_main_image_iv"
            app:layout_constraintBottom_toBottomOf="@id/profile_main_image_iv"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/profile_edit_nickname_et"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:hint="큐피"
            android:paddingStart="5dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/border"
            app:layout_constraintStart_toEndOf="@id/profile_main_image_iv"
            app:layout_constraintTop_toTopOf="@id/profile_main_image_iv"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:visibility="gone"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_edit_yes_btn"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/box_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="75dp"
            android:text="확인"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:visibility="gone"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_edit_no_btn"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/box_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_chargek_btn"
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:background="@drawable/box_white_lined"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile_main_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/profile_charge10k_btn">
        <ImageView
            android:id="@+id/profile_chargek_coin_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/coin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:id="@+id/profile_chargek_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1천원 충전하기"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_chargek_coin_iv"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/profile_chargek_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,000 point가 충전돼요\n100개의 답변을 확인할 수 있어요"
            android:textSize="8sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_chargek_naver_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/box_white_lined"
        app:layout_constraintStart_toStartOf="@id/profile_chargek_btn"
        app:layout_constraintTop_toBottomOf="@id/profile_chargek_btn"
        android:layout_marginTop="15dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/logo_naver"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/profile_chargek_naver_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네이버"
            android:textSize="11sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="2dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_chargek_kakao_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/box_white_lined"
        app:layout_constraintEnd_toEndOf="@id/profile_chargek_btn"
        app:layout_constraintTop_toBottomOf="@id/profile_chargek_btn"
        android:layout_marginTop="15dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/logo_kakao"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/profile_chargek_kakao_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오"
            android:textSize="11sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="2dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_charge10k_btn"
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:background="@drawable/box_white_lined"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile_main_box"
        app:layout_constraintStart_toEndOf="@id/profile_chargek_btn"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/profile_charge10k_coin_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/coin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:id="@+id/profile_charge10k_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1만원 충전하기"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_charge10k_coin_iv"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/profile_charge10k_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000 point가 충전돼요\n1,000개의 답변을 확인할 수 있어요"
            android:textSize="8sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_charge10k_naver_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/box_white_lined"
        app:layout_constraintStart_toStartOf="@id/profile_charge10k_btn"
        app:layout_constraintTop_toBottomOf="@id/profile_charge10k_btn"
        android:layout_marginTop="15dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/logo_naver"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/profile_charge10k_naver_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네이버"
            android:textSize="11sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="2dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_charge10k_kakao_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/box_white_lined"
        app:layout_constraintEnd_toEndOf="@id/profile_charge10k_btn"
        app:layout_constraintTop_toBottomOf="@id/profile_charge10k_btn"
        android:layout_marginTop="15dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/logo_kakao"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/profile_charge10k_kakao_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오"
            android:textSize="11sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="2dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/profile_question_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="true"
        app:tabBackground="@drawable/tab_underline"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorColor="@color/black"
        app:tabRippleColor="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="300dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/profile_question_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profile_question_tb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>