<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailedActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/detailed_qp_logo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="큐피 로고"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/qp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/prev_question_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailed_qp_logo_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow24"
                    android:scaleX="-1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="이전 질문"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/next_question_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailed_qp_logo_tv"
                android:layout_marginEnd="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="다음 질문"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow24"
                    />
            </LinearLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/prev_question_view"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/box_orange">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/question_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="20dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/box_white">

                    <ImageView
                        android:id="@+id/question_user_img"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="15dp"
                        android:src="@drawable/user" />
                    <TextView
                        android:id="@+id/detailed_question_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/question_user_img"
                        app:layout_constraintBottom_toBottomOf="@id/question_user_img"
                        app:layout_constraintStart_toEndOf="@id/question_user_img"
                        android:layout_marginHorizontal="15dp"
                        android:text="질문 제목"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/detailed_question_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/question_user_img"
                        app:layout_constraintStart_toStartOf="@+id/detailed_question_title_tv"
                        android:text="시간"
                        android:textSize="10dp"/>

                    <TextView
                        android:id="@+id/detailed_question_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/question_user_img"
                        app:layout_constraintStart_toStartOf="@id/question_user_img"
                        android:layout_marginTop="15dp"
                        android:text="질문 내용"
                        android:textSize="10dp"/>
                    <ImageButton
                        android:id="@+id/answer_more_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="10dp"/>

                    <ImageButton
                        android:id="@+id/answer_notice_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/answer_more_btn"
                        app:layout_constraintEnd_toEndOf="@id/answer_more_btn"
                        app:layout_constraintTop_toBottomOf="@id/detailed_question_content_tv"
                        android:layout_marginVertical="10dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/write_answer_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/answer_border_line"
                     />

                <TextView
                    android:id="@+id/answer_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/question_box"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginVertical="15dp"
                    android:text="3명의 전문가가 답변을 했어요"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                     />
                <View
                    android:id="@+id/answer_border_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/answer_count_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/answer_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/answer_border_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/box_white_lined"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:layout_marginVertical="10dp"
                    android:text="답변하기"
                    android:textColor="@color/qp"
                    android:textSize="10dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/answer_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/notice_view"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_answer">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/notice_view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/write_answer_container"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/box_white_lined"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/notify_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="알림신청을 하면 답변이 달리는 즉시 알림을 받으실 수 있어요"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/nofity_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/nofity_btn"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/notify_tv"
                        android:background="@drawable/box_white_lined"
                        android:gravity="center"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingVertical="5dp"
                        android:text="알림 신청하기"
                        android:textSize="10dp"

                        android:textColor="@color/qp" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>