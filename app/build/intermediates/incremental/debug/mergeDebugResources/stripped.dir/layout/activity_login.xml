<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/login_qp_logo_tv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/app_logo"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login_close_iv"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_qp_logo_tv"
        android:layout_marginEnd="20dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_kakao_btn"
        android:layout_width="380dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_kakao"
        android:text="카카오로 간편 가입하기"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_naver_btn"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/login_kakao_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_naver"
        android:text="네이버로 간편 가입하기"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_google_btn"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/login_kakao_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_google"
        android:text="구글로 간편 가입하기"
        android:textSize="18sp"
        android:textColor="@color/black"/>


    <LinearLayout
        android:id="@+id/login_expert_ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_google_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/login_expert1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전문가이신가요?"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/login_google_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/login_expert2_tv"/>
        <TextView
            android:id="@+id/login_expert2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전문가 계정으로 로그인하기"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/qp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/login_google_btn"
            app:layout_constraintStart_toEndOf="@id/login_expert1_tv" />
    </LinearLayout>

    <EditText
        android:id="@+id/login_authentication_email_et"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:hint="큐피 메일(qp.official.ac@gmail.com)로 받은 인증번호를 입력해주세요."
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/login_expert_ln"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_border" />

    <TextView
        android:id="@+id/login_authentication_fail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="틀린 인증번호 입니다."
        android:textColor="@color/red"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_authentication_email_et"
        app:layout_constraintStart_toStartOf="@id/login_authentication_email_et"
        android:visibility="invisible"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_next_btn"
        android:layout_width="130dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_authentication_email_et"
        android:background="@drawable/btn_login"
        android:layout_marginTop="35dp"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_next_invalid_btn"
        android:layout_width="130dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_authentication_email_et"
        android:background="@drawable/btn_login_invalid"
        android:layout_marginTop="35dp"
        android:text="로그인"
        android:textColor="@color/black"
        android:textSize="17sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>