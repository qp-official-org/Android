<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/qp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/baseline_check_24" android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape>
            <stroke android:color="@color/border" android:width="1dp"/>
            <solid android:color="@color/white"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>

</selector>