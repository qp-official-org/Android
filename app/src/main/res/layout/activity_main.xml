<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_qp_logo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="큐피 로고"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/qp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/main_question_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_search_bt"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="        질문하기 전 검색하기"
        android:textSize="12dp"
        android:paddingTop="2dp"
        android:background="@drawable/bar_search"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="@id/main_question_rv"
        app:layout_constraintEnd_toEndOf="@id/main_question_rv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_question_rv" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/bt_search"
        android:layout_marginStart="-5dp"
        app:layout_constraintStart_toStartOf="@id/main_search_bt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_question_rv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_question_rv"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        tools:listitem="@layout/item_question"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        app:layout_constraintTop_toBottomOf="@id/main_qp_logo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/main_login_bt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="로그인 하기"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/qp"
        android:background="@drawable/login_button_design"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>