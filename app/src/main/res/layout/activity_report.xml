<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/report_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:text="신고하기"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/report_cancel_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/cancel_btn"/>
    <EditText
        android:id="@+id/report_edit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/report_title_tv"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:gravity="top"
        android:hint="신고할 내용을 작성해주세요"
        android:textSize="15dp"
        android:padding="5dp"
        android:background="@drawable/box_white_lined"/>

    <TextView
        android:id="@+id/report_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:text="신고하기"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/box_white_lined"
        android:paddingHorizontal="40dp"
        android:paddingVertical="5dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>